<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/relationsVersionLbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Relations Mobile:"
                android:textSize="17sp"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="7dp" />

            <TextView
                android:id="@+id/relationsVersionVal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countDbTotalLbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/preference_nr_total"
                android:textSize="17sp"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="7dp" />

            <TextView
                android:id="@+id/countDbTotalVal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countDbTermsLbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/preference_nr_terms"
                android:textSize="17sp"
                android:paddingStart="15dp"
                android:paddingEnd="7dp"/>

            <TextView
                android:id="@+id/countDbTermsVal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countDbTextsLbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/preference_nr_texts"
                android:textSize="17sp"
                android:paddingStart="15dp"
                android:paddingEnd="7dp" />

            <TextView
                android:id="@+id/ccountDbTextsVal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countDbPersonsLbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/preference_nr_persons"
                android:textSize="17sp"
                android:paddingStart="15dp"
                android:paddingEnd="7dp" />

            <TextView
                android:id="@+id/countDbPersonsVal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countDbRelationsLbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/preference_nr_relations"
                android:textSize="17sp"
                android:paddingStart="15dp"
                android:paddingEnd="7dp" />

            <TextView
                android:id="@+id/countDbRelationsVal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/countSearchIndexLbl"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/preference_nr_search_index"
                android:textSize="17sp"
                android:paddingTop="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="7dp" />

            <TextView
                android:id="@+id/countSearchIndexVal"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="17sp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>